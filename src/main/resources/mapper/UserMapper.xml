<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hqyj.zsj.mapper.UserMapper">
    <!-- 映射User结果集-->
    <resultMap id="UserMap" type="user">
        <id column="user_id" property="userId"/>
        <result column="headPic" property="headPic"/>
        <result column="username" property="userName"/>
        <result column="password" property="password"/>
        <result column="email" property="email"/>
        <result column="user_state" property="userState"/>
        <association property="role">
            <id property="roleId" column="role_id"/>
            <result property="roleName" column="role_name"/>
        </association>
    </resultMap>
    <!-- 映射Article结果集-->
    <resultMap id="ArticleMap" type="article">
        <id column="blog_id" property="blogId"/>
        <result column="blog_title" property="blogTitle"/>
        <result column="blog_time" property="blogTime"/>
        <result column="blog_content" property="blogContent"/>
        <result column="blog_type" property="blogType"/>
        <association property="user">
            <id property="userId" column="user_id"/>
            <result property="blogAuthor" column="blog_author"/>
        </association>
    </resultMap>
    <select id="selectUserByUsername" resultMap="UserMap">
        SELECT
            u.`user_id`,
            u.`headPic`,
            u.`username`,
            u.`password`,
            u.`email`,
            u.`user_state`,
            r.`role_id`,
            r.`role_name`
        FROM
            `user` u
            LEFT JOIN `role` r ON u.`user_role` = r.`role_id`
        WHERE
            u.`username`=#{username} and u.`user_state`=1
    </select>
    <insert id="registerUser">
        insert into `user`
        values (#{username},#{password},#{email},1,1)
    </insert>

</mapper>